
@model IEnumerable<DayOrganizer.Web.Models.Tasks>
<style>
    #newEventHolder {
        margin-left: 20%;
        margin-top: 2%;
        width: 60%;
        height: 100px;
        border: 3px dashed #85b9e4;
        text-align: center;
        line-height: 4;
        font-size: 24px;
        cursor: pointer;
        color: #85b9e4;
        box-sizing: border-box;
        border-radius: 3px;
    }

    #eventHolder {
        margin-left: 17.2%;
        margin-top: 2%;
        padding: 17px 15px;
        margin-bottom: 10px;
        background: #C4DDF2;
        width: 62%;
        height: 100px;
        box-sizing: border-box;
        border-radius: 3px;
        list-style-type: none;
    }

        #eventHolder .event-date-holder {
            float: left;
            background: #A7C1D9;
            margin-right: 20px;
            margin-top: -4px;
            margin-left: -2px;
            padding: 10px;
            width: 60px;
            height: 75px;
            text-align: center;
            border-radius: 4px;
            box-shadow: 0px 1px 0px 0px #d9e9f7;
        }

        #eventHolder .event-details-holder {
            float: left;
            width: 520px;
            line-height: 3.2;
        }

        #eventHolder .event-date-holder #dateNumber {
            display: block;
            margin-top: -5px;
            font-size: 30px;
            font-weight: 700;
            color: #0C1726;
        }

        #eventHolder .event-date-holder #dateDay {
            text-transform: uppercase;
        }

        #eventHolder .event-details-holder h1 {
            float: left;
            margin-right: 30px;
            vertical-align: bottom;
            font-size: 20px;
            font-weight: 600;
            color: #244674;
        }

        #eventHolder .event-details-holder span#eventDescription {
            position: relative;
            padding-top: 4px;
            color: #0f2b42;
            float: left;
            font-size: 18px;
        }

        #eventHolder .event-details-holder ul#editTools {
            float: right;
            margin: 0px 0px 00px 10px;
            padding: 0px;
        }

    reset.min.css:1 ol, ul {
        list-style: none;
    }

    #eventHolder .event-details-holder ul#editTools li {
        display: inline;
        margin-right: 15px;
        padding-top: 5px;
        font-size: 20px;
        color: #5ca1db;
    }

    .fa {
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        transform: translate(0, 0);
    }

    #eventHolder .event-details-holder span#eventDescription {
        position: relative;
        padding-top: 4px;
        color: #0f2b42;
        float: left;
        font-size: 18px;
    }

    #newEventForm {
        width: 400px;
        padding: 15px;
        margin-left: 20%;
        box-sizing: border-box;
        display: block;
    }

        #newEventForm label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            font-size: 16px;
            color: #244674;
        }

        #newEventForm input[type="text"] {
            padding-left: 15px;
            margin-bottom: 20px;
            height: 50px;
            width: 100%;
            line-height: 1.875;
            font-size: 16px;
            color: #A7C1D9;
            border: 2px solid #C4DDF2;
            outline: 0;
            box-sizing: border-box;
            background: #f6fafd;
        }

        #newEventForm textarea {
            margin-bottom: 20px;
            padding: 5px;
            height: 120px;
            width: 100%;
            line-height: 1.875;
            font-size: 16px;
            color: #A7C1D9;
            border: 2px solid #C4DDF2;
            outline: 0;
            box-sizing: border-box;
            border-radius: 3px;
            background: #f6fafd;
        }

    textarea {
        font-family: monospace;
        border-color: rgb(169, 169, 169);
    }

    textarea {
        -webkit-appearance: textarea;
        background-color: white;
        -webkit-rtl-ordering: logical;
        user-select: text;
        flex-direction: column;
        resize: auto;
        cursor: auto;
        white-space: pre-wrap;
        word-wrap: break-word;
        border-width: 1px;
        border-style: solid;
        border-color: initial;
        border-image: initial;
        padding: 2px;
    }

    input, textarea, keygen, select, button {
        text-rendering: auto;
        color: initial;
        letter-spacing: normal;
        word-spacing: normal;
        text-transform: none;
        text-indent: 0px;
        text-shadow: none;
        display: inline-block;
        text-align: start;
        margin: 0em 0em 0em 0em;
        font: 13.3333px Arial;
    }

    input, textarea, keygen, select, button, meter, progress {
        -webkit-writing-mode: horizontal-tb;
    }

    #newEventForm button {
        margin-right: 10px;
        padding: 0 15px;
        background: #849EBF;
        color: #eef5fb;
        font-size: 16px;
        font-weight: 400;
        border: 0;
        outline: 0;
        line-height: 3.5;
        border-radius: 3px;
        cursor: pointer;
    }

        #newEventForm button#cancelAddEvent {
            background: #d9e9f7;
            color: #4c6a91;
            cursor: pointer;
        }
</style>

<script>
    $(document).ready(function () {
        $('#newEventHolder').click(function () {
            $('.event-list-wrapper').toggleClass('top-margin-animation');
            if ($('.event-list-wrapper').hasClass('top-margin-animation')) {
                $('.event-list-wrapper').animate({ 'margin-top': "300px" });
            }
            else { $('.event-list-wrapper').animate({ 'margin-top': "0px" }); }
        });

    });
</script>

<div id="newEventHolder">
    <span><i class="fa fa-plus"></i> Add New Event</span>
</div>

<div id="newEventForm">
    <form method="post">
        <label for="event-date">Event Date</label>
        <input type="text" id="datetimepicker" class="hasDatepicker" name="eventDate">
        <label for="event-title">Event Title</label>
        <input type="text" name="eventTitle" id="eventTitleInput" maxlength="80">
        <label for="event-description">Description</label>
        <textarea name="eventDescription" id="eventDescriptionInput">Event Description</textarea>
        <button name="add-event" form="newEventForm" id="addEvent">Add New Event</button>
        <button name="cancel-add-event" id="cancelAddEvent">Cancel</button>
    </form>
</div>



<div class="event-list-wrapper">
    <ul>
        @foreach (var task in Model)
        {
            <li id="eventHolder">
                <div class="event-date-holder">
                    <span id="dateNumber">@task.EndDate.Day</span>
                    <span id="dateDay">jan</span>
                </div>
                <div class="event-details-holder">
                    <h1>@task.Title</h1>
                    <span id="eventDescription"> @task.FullDescription </span>
                    <div style="position:absolute; left:900px;">
                        <ul id="editTools">
                            <li><i class="fa fa-pencil-square-o"></i></li>
                            <li><i class="fa fa-bars"></i></li>
                            <li><i class="fa fa-times" id="removeEvent"></i></li>
                        </ul>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
